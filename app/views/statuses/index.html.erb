<div class="page-header">
    <h1>Todos los Status  <%= link_to "Post a new Startup Idea", new_status_path, class: "btn btn-success startup_btn" %></h1>
   

</div>

<div class="right">


<% @statuses.each do |status| %>
<div class="status">
    <strong><%= status.name %></strong>
    <p><%= status.content %></p>
    <div class="meta">
        <%= link_to time_ago_in_words(status.created_at) + " ago", status %> |
        <%= link_to "Mostrar", status %> 
        <span class="admin">
            | <%= link_to "Editar", edit_status_path(status) %> 
            | <%= link_to "Borrar", status, method: :delete, data: {confirm: "Estas seguro que quieres borrarlo?"} %>

        </span>
    </div>
</div>
<% end %>